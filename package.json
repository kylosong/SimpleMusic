{
  "name": "simple-music-player",
  "version": "1.0.1",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --watch main.js --exec \"electron .\"",
    "dist": "electron-builder",
    "build": "build",
    "release": "cross-env GH_TOKEN=aab7f7c5d3910af485dc97aab7a1817bc318ae43 electron-builder"
  },
  "build": {
    "appId": "SimpleMusicPlayer",
    "productName": "自定义音乐播放器",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "build/icon.ico",
      "publish": ["github"]
    }
  },
  "repository": "https://github.com/xunchang333/SimpleMusic",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Viking Zhang",
  "license": "CC0-1.0",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "electron": "^4.1.3",
    "electron-builder": "^20.40.2",
    "electron-builder-squirrel-windows": "^22.9.1",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "electron-store": "^3.2.0",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0",
    "uuid": "^3.3.2"
  }
}
